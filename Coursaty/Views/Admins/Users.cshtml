@model IEnumerable<Coursaty.Models.ApplicationUser>
@{
    ViewBag.Title = "All Users in site";
}

<div class="users">
    <div class="container">
        <div class="info">
            <h2>All Admins in site</h2>
            <span>@Model.Count() User</span>
        </div>

        <div class="row">
            @foreach (var user in Model)
            {
                <div class="col-sm-4">
                    <div class="user text-center">
                        <img src="@user.ProfilePicture" class="img-thumbnail img-circle userProfilePicture" alt="User picture" />
                        <h3>@user.FullName</h3>
                        <a href="/admins/userAccount/@user.Id"></a>
                    </div>
                </div>
            }
        </div>

    </div>
</div>

