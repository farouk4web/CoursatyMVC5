@model IEnumerable<Coursaty.Models.Category>
@{
    ViewBag.Title = "all categories";
}

<div class="categories">
    <div class="container">

        @if (Model.Count() == 0)
        {
            <p class="lead">
                Sorry We dont Add any category yet
            </p>
        }

        <div class="row">
            @foreach (var category in Model)
            {
                <div class="col-sm-4">
                    <div class="category text-center">
                        <h3>@category.Name</h3>
                        <h5><b>@category.Courses.Count </b>Courses</h5>
                    </div>
                </div>
            }
        </div>

    </div>
</div>

